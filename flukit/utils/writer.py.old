#!/usr/bin/env python3
from pandas import DataFrame

tmp = {'Seq No': [],
        'Amino Acid Info': [],
        'H275Y': [],
        'S31N': [],
        'I38X': [],
        'HA Clade': [],
        'Vaccine Reference': [],
        'Result': []
}

results_output = DataFrame(tmp)

def append_result(seq_id, result_type, result):
    '''
    Appends results to pandas dataframe for output
    
    params
        seq_id       :  str  -  sequence ID of sample, eg N100XXXX.4
        result_type  :  str  -  which result column to update
        result       :  str  -  the result to add

    Return
        updates results dataframe.
    '''
    assert result_type in results_output.keys(), "Result_type is wrong, check input for updating dataframe"
    results_output.append({'Seq No': seq_id, result_type: result}, ignore_index=True)

def write_output(df, location):
    df.to_csv(location, sep = ",", na_rep = "")
